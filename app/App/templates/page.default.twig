<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{% block title %}{{ app.config.project }}{% endblock %}</title>

        {% block meta %}
        <meta charset="utf8">
        <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1">
        {# <meta http-equiv="Content-Security-Policy" content="default-src 'self' *.loveburien.com; style-src 'self' 'unsafe-inline' fonts.googleapis.com *.loveburien.com; font-src 'self' fonts.gstatic.com;"> #}
        {% endblock %}

        {% block styles %}
        <link href="https://fonts.googleapis.com/css?family=Goudy+Bookletter+1911" rel="stylesheet">
        <link rel="stylesheet" href="{{ app.config.root }}/assets/css/bootstrap.min.css" />
        <link rel="stylesheet" href="{{ app.config.root }}/assets/css/font-awesome.min.css" />
        <link rel="stylesheet" href="{{ app.config.root }}/assets/css/style.min.css" />
        {% endblock %}
    </head>

    <body class="">
        {% block header %}{% include 'partials/header.twig' %}{% endblock %}
        {% block messages %}{% include 'partials/messages.twig' %}{% endblock %}

        <main id="main" class="">
            {% block main %}{% endblock %}
        </main>

        {% block footer %}{% include 'partials/footer.twig' %}{% endblock %}

        {% block scripts %}
        <script src="{{ app.config.root }}/assets/js/jquery.min.js"></script>
        <script src="{{ app.config.root }}/assets/js/popper.min.js"></script>
        <script src="{{ app.config.root }}/assets/js/bootstrap.min.js"></script>
        <script src="{{ app.config.root }}/assets/js/app.js"></script>
        {% endblock %}
    </body>
</html>
